<!-- Results page -->

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

<div class="display-5" style=" background-color: #189bb2">
  <nav class="navbar navbar-dark fixed-top" style=" background-color: #189bb2">
    <div class="container">
      <a class="navbar-brand" href="/">Movie Search</a>
    </div>
    <form class="form-inline my-2 my-lg-0">
     <input class="form-control mr-sm-2" type="search" placeholder="Search" name="searchID">
     <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </nav>
</div>

<div class="jumbotron" style="background-color: #7ddff2; color: white; padding-top:90px" align = "center">
  <h1 class="display-1"><strong>Results Page</strong></h1>
</div>

<!-- display each movie title -->
  <% data["Search"].forEach(function(movie){ %>
  <div class="container">
    <div class="jumbotron" style="padding: 10px; margin: 10 auto;">
        <ul style="padding: 5px; margin: 10 auto;">
          <% var imgPoster = movie["Poster"]; %>
          <img style="-webkit-user-select: none;cursor: zoom-in; padding: 5px; margin: 0 auto;" src="<%= imgPoster %>" width="289" height="428">
          <!-- <small id="imgDes" class="text text-muted">Official Poster</small> -->
          <li style="padding: 5px; margin: 10 auto;">
            <strong>Title: <%= movie["Title"] %></strong>
          </li>
          <ul style="padding: 5px; margin: 0 auto;"">
            <li style="padding: 5px; margin: 10px auto;">Year of Release: <%= movie["Year"] %></li>
            <li style="padding: 5px; margin: 10px auto;">
              <% var imdbC = 'https://www.imdb.com/title/' + movie['imdbID'] + '/'; %>
              <% console.log(imdbC); %>
              <% console.log(typeof(imdbC)); %>
              <a href="<%= imdbC %>"><button type="button" class="btn btn-info">Click for IMDb</button></a>
            </li>
          </ul>
        </ul>
    </div>
  </div>
  <% }) %>
